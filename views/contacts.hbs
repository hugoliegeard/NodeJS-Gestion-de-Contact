<div class="p-3 mx-auto text-center">
    <h1 class="display-4">Mes Contacts</h1>
</div>

<div class="py-5 bg-light">
    <div class="container">
        <div class="row">
            <div class="col">
                <div class="card shadow-sm">
                    <div class="alert alert-info m-2">
                        Bonjour {{ user.email }}, vous êtes connecté.
                            <a href="/security/logout">Déconnexion</a>
                    </div>
                    {{>flash}}
                    <table id="contactTable" class="table">
                        <thead>
                        <tr>
                            <th scope="col">Prénom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">Email</th>
                            <th scope="col">Tel</th>
                            <th scope="col">Actions</th>
                        </tr>
                        </thead>
                        <tbody>
                        {{#if contacts }}
                        {{#each contacts }}
                            <tr>
                                <td>{{ prenom }}</td>
                                <td>{{ nom }}</td>
                                <td>{{ email }}</td>
                                <td>{{ tel }}</td>
                                <td>
                                    <a class="btn btn-primary" href="/admin/contact/{{ _id }}">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a class="btn btn-warning" href="/admin/contact/{{ _id }}/edit">
                                        <i class="fas fa-pen"></i>
                                    </a>
                                    <a class="btn btn-danger" href="/admin/contact/{{ _id }}/delete">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </td>
                            </tr>
                        {{/each}}
                        {{else}}
                            <tr>
                                <td colspan="6">
                                    <p class="text-center">Pas de contact pour le moment.</p>
                                </td>
                            </tr>
                        {{/if}}
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
