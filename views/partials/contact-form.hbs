{{#if errors}}
    <div class="alert alert-danger">
        {{#each errors}}
            <i class="fas fa-exclamation-triangle"></i> {{ this.msg }} <br>
        {{/each}}
    </div>
{{/if}}

<!-- Prénom -->
<div class="form-group">
    <label>Prénom</label>
    <input {{#with (ifIn errors "param" "prenom") }}
    class="form-control is-invalid"
    {{else}}
    class="form-control"
    {{/with}}
    value="{{ body.prenom }}"
    name="prenom" placeholder="Prénom." type="text">
    {{#with (ifIn errors "param" "prenom") }}
        <div class="invalid-feedback">
            {{ msg }}
        </div>
    {{else}}
        <small class="form-text text-muted">
            Saisissez le prénom du contact.
        </small>
    {{/with}}
</div>

